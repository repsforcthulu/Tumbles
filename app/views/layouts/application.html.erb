<!DOCTYPE html>
<html>
  <head>
    <title>Tumbles</title>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
    <div id="sidebar">
      <ul>
        <li class="category"><%= link_to "Tumbles", root_path %></li>
        <li><%= link_to "Feed", root_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>

      <p class="sign_in">User Login</p>
    </div>

    <div id="main_content">
      <div id="header">
        <% if current_page?(root_path) %>
          <p>Post Feed</p>
        <% elsif current_page?(about_path) %>
          <p>About</p>
        <% elsif current_page?(post_path)%>
          <p>Your Post</p>
        <%end%>
        <% unless current_page?(root_path)%>
          <p>| </p>
          <%= link_to "Back to Feed", root_path %>
        <% end %>




 

        <div class="buttons">
        <button class="button"><%= link_to "Make Post", new_post_path %></button>
        <button class="button">Log Out</button>
        </div>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert") %>
      <% end %>

      <%= yield %>
    
    </div>

  </body>
</html>
